let vimrcdir = '$HOME/code/dotfiles/vim/'
for s:script_name in split(globpath(vimrcdir, '*.vim'))
    exec ':source ' . s:script_name
endfor

let g:python2_host_prog = 'python'
let g:python3_host_prog = '/usr/local/bin/python3'

" Use current repos tox default virtualenv for ycm if it is found
let git_dir=system('git rev-parse --show-toplevel')
" Remove the '^@' from the end
let git_dir=substitute(git_dir, '.$', '', '')
let invalid_git_dir=matchstr(git_dir, '^fatal:.*')

if (empty(invalid_git_dir))
    let g:ycm_python_binary_path = (git_dir . '/.tox/default/bin/python')
else
    let g:ycm_python_binary_path = 'python'
endif


set t_Co=256
set number
set mouse=a
set tabstop=2
set shiftwidth=2
set expandtab

" Show whitespace characters
set list

" makes webpack livereload work
set backupcopy=yes

" Hides current file when opening explorer
set hidden

" Clipboard
nnoremap <C-y> "+y
vnoremap <C-y> "+y
nnoremap <C-p> "+gP
vnoremap <C-p> "+gP

nnoremap <Tab> <C-^><CR>

nmap <C-p> :FZF .<CR>

syntax enable

colorscheme wells-colors

hi Normal ctermbg=none

set backspace=start,eol,indent

set clipboard=unnamed
