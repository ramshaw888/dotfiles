let vimrcdir = '$HOME/code/dotfiles/vim/'
for s:script_name in split(globpath(vimrcdir, '*.vim'))
    exec ':source ' . s:script_name
endfor

let pyenv_dir=system('pyenv root')
let pyenv_dir=substitute(pyenv_dir, '.$', '', '')
let g:python2_host_prog = (pyenv_dir . '/shims/python2')
let g:python3_host_prog = (pyenv_dir . '/shims/python3')

" Use current repos tox default virtualenv for ycm if it is found
let git_dir = GitDir()
if (!empty(git_dir))
    let g:ycm_python_binary_path = (git_dir . '/.tox/runserver/bin/python')
else
    let g:ycm_python_binary_path = 'python'
endif

set t_Co=256
set number
set mouse=a
set tabstop=2
set shiftwidth=2
set expandtab

" Show whitespace characters
set list

" makes webpack livereload work
set backupcopy=yes

" Hides current file when opening explorer
set hidden

syntax enable

colorscheme wells-colors

hi Normal ctermbg=none

set backspace=start,eol,indent

set clipboard=unnamed

set omnifunc=syntaxcomplete#Complete
