# enter fullscreen mode for the focused container
# cmd - t : chunkc tiling::window --toggle fullscreen

shift + cmd - y : open -na '/Applications/Google Chrome.app'

cmd - return : source $HOME/code/dotfiles/shell/functions.zsh; new_iterm

# change focus between tiling / floating windows
# shift + cmd - space : chunkc tiling::window --toggle float

# change layout of desktop
# cmd - e : chunkc tiling::desktop --layout bsp
# cmd - s : chunkc tiling::desktop --layout monocle

# kill focused window
shift + cmd - q : chunkc tiling::window --close

# change focus
cmd - h : chunkc tiling::window --focus west
cmd - n : chunkc tiling::window --focus south
cmd - e : chunkc tiling::window --focus north
cmd - i : chunkc tiling::window --focus east

# cmd - p : chunkc tiling::window --focus prev
# cmd - n : chunkc tiling::window --focus next

# move focused window
alt + cmd - h : chunkc tiling::window --swap west
alt + cmd - n : chunkc tiling::window --swap south
alt + cmd - e : chunkc tiling::window --swap north
alt + cmd - i : chunkc tiling::window --swap east

# cmd - r : chunkc tiling::desktop --rotate 90
